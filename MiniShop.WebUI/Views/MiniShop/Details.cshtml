@using MiniShop.WebUI.Models
@model ProductDetailModel

<div class="row">
    <div class="col-2">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid" />
    </div>
    <div class="col-10">
        <h1>@Model.Product.Name</h1>
        <hr />
        <div class ="mb-2">
            @foreach (var category in Model.Categories)
            {
                <a href="#">@category.Name</a>

            }
        </div>

        <div>
            <h4 class="text-primary">@Model.Product.Price</h4>
            <div>
                <p>@Model.Product.Description</p>
            </div>
            <button type="submit" class="btn btn-primary" btn_lg>Add to Card</button>
        </div>
    </div>
</div>

