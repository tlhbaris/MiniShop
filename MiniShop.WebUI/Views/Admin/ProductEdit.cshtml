@model ProductModel

<h1>Edit Product</h1>
<hr>
<div class="row">
     <div class="col-8">
        <form asp-controller="Admin" asp-action="ProductEdit" method="post">
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <div class="form-group row mb-2">
                <label asp-for="Name" class="col-2 col-form-label"></label> 
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Description" class="col-2 col-form-label"></label> 
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Price" class="col-2 col-form-label"></label> 
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="ImageUrl" class="col-2 col-form-label"></label> 
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Url" class="col-2 col-form-label"></label> 
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Url">
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </form>
     </div>
</div>