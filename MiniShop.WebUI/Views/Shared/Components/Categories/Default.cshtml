@model List<Category>

<div class="list-group mb-3">

    <a 
        asp-controller="MiniShop" 
        asp-action="List" 
        asp-route-category="" class="list-group-item list-group-item-action">Tümünü Göster</a>
    @foreach (var category in Model)
    {
        <a 
           asp-controller="MiniShop"
           asp-action="List"
           asp-route-category="@category.Url"
           class="list-group-item list-group-item-action">@category.Name</a>
    }

</div>

