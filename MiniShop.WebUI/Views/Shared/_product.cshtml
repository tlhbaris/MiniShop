@* Burası tek bir product gostermek için *@
@model Product
<div class ="card mb-2"> 

                        <div class="card-img p-2 text-center">
                           <img src="~/images/@Model.ImageUrl"/>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center">@Model.Name</h5>
                            <small class="text-muted">
                                @Model.Price
                            </small>
                            
                        </div>
                        <div class="card-footer bg-white text-center d-flex justify-content-around p-1">
                            <a href="#" class="btn btn-sm btn-primary">Details</a>
                            <a href="#" class="btn btn-sm btn-success">Add to Card</a>
                        </div>            
</div> 